<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="140dp"
    android:background="@drawable/my_contents_box"
    android:id="@+id/my_contents_row"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/category_in_article_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/category_style_in_article">
        <TextView
            android:backgroundTint="@color/ui1"

            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/style1_5"
            android:textSize="10sp"
            android:text="#해외 축구"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:padding="3dp"
            android:gravity="center" />

    </RelativeLayout>


    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/ui1"
        android:text="21/04/28" />
    <TextView
        android:id="@+id/context_tv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="2dp"
        android:text="마포구청 근처에 늦게까지 영업하는 맛있는\n반다이크 언제 나오냐 ~"
        android:textColor="@color/ui3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_transparent"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="40dp"
        android:text="12"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_ripple_balloon" />


</RelativeLayout>