<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/gray8"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/gray1"
            android:background="@drawable/outline_bookmark_border_24"
            app:civ_border_width="1dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_orange"
            android:gravity="center"
            android:text="야식"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tv_nicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_badge"
            android:layout_below="@+id/tv_badge"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="배고픈 빙봉"
            android:textColor="@color/gray1"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이상 맺어, 그들의 같이, 사막이다. 뜨거운지라, 때에, 것은 우는 새가 때문이다. 수 얼마나 이상의 것이다. 청춘에서만 유소년에게서 위하여, 자신과 시들어 생생하며, 창공에 날카로우나 것이다.
"
            android:textSize="20dp"
            android:textColor="@color/gray1"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/tv_nicname"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_img"
            android:layout_alignParentEnd="true"
            android:textColor="@color/gray1"
            android:textSize="20dp"
            android:text="3분전"
            />

        <!-- 본문 아래 -->
        <TextView
            android:id="@+id/article_favorite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_txt"
            android:layout_marginTop="@dimen/article_content_tv_paddingtop"
            android:background="@drawable/outline_favorite_border_24"
            android:backgroundTint="@color/gray1"
            />
        <TextView
            android:id="@+id/article_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_txt"
            android:layout_toEndOf="@id/article_favorite_btn"
            android:layout_marginStart="@dimen/article_content_padding_horizontal"
            android:layout_marginTop="@dimen/article_content_tv_paddingtop"
            android:background="@drawable/outline_chat_bubble_outline_24"
            android:backgroundTint="@color/gray1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/article_content_tv_paddingtop"
            android:background="@drawable/outline_share_24"
            android:backgroundTint="@color/gray1"/>

