<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".community.CreateArticleActivity"
    android:background="@drawable/bfbfbf">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/comm_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/toolbar_elevation_size"
        android:background="@color/black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">
            <TextView
                android:id="@+id/cerate_article_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/create_article_title_tv_size"
                android:gravity="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <HorizontalScrollView
        android:id="@+id/horizontal_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_main_toolbar"
        android:paddingTop="@dimen/scrollview_padding_vertical"
        android:paddingBottom="@dimen/scrollview_padding_vertical"
        android:layout_marginBottom="@dimen/scrollview_margin_bottom"
        android:background="@color/black"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/comm_list_lr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/scrollview_padding_horizontal"
            android:paddingEnd="@dimen/scrollview_padding_horizontal">
            <TextView
                android:id="@+id/cate_honey_tips"
                android:layout_width="@dimen/comm_theme_tv_width"
                android:layout_height="wrap_content"
                android:text="@string/comm_honey_tip"
                android:textSize="@dimen/comm_theme_tv_size"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/style1_5"
                android:paddingTop="@dimen/comm_theme_padding_vertical"
                android:paddingBottom="@dimen/comm_theme_padding_vertical"
                android:layout_marginEnd="@dimen/comm_theme_margin_right"
                android:duplicateParentState="true"
                />
            <TextView
                android:id="@+id/cate_stocks_overseas"
                android:layout_width="@dimen/comm_theme_tv_width"
                android:layout_height="wrap_content"
                android:text="@string/comm_stocks_overseas"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/style1_4"
                android:paddingTop="@dimen/comm_theme_padding_vertical"
                android:paddingBottom="@dimen/comm_theme_padding_vertical"
                android:layout_marginEnd="@dimen/comm_theme_margin_right"
                android:duplicateParentState="true"/>
            <TextView
                android:id="@+id/cate_soccor_games"
                android:layout_width="@dimen/comm_theme_tv_width"
                android:layout_height="wrap_content"
                android:text="@string/comm_soccor_games"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/style1_3"
                android:paddingTop="@dimen/comm_theme_padding_vertical"
                android:paddingBottom="@dimen/comm_theme_padding_vertical"
                android:layout_marginEnd="@dimen/comm_theme_margin_right"
                android:duplicateParentState="true" />
            <TextView
                android:id="@+id/cate_job_talks"
                android:layout_width="@dimen/comm_theme_tv_width"
                android:layout_height="wrap_content"
                android:text="@string/comm_job_talks"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/style1_2"
                android:paddingTop="@dimen/comm_theme_padding_vertical"
                android:paddingBottom="@dimen/comm_theme_padding_vertical"
                android:paddingStart="@dimen/comm_theme_padding_horizontal"
                android:paddingEnd="@dimen/comm_theme_padding_horizontal"
                android:layout_marginEnd="@dimen/comm_theme_margin_right"
                android:duplicateParentState="true"/>
            <TextView
                android:id="@+id/cate_study_hard"
                android:layout_width="@dimen/comm_theme_tv_width"
                android:layout_height="wrap_content"
                android:text="@string/comm_study_hard"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/style1_1"
                android:paddingTop="@dimen/comm_theme_padding_vertical"
                android:paddingBottom="@dimen/comm_theme_padding_vertical"
                android:paddingStart="@dimen/comm_theme_padding_horizontal"
                android:paddingEnd="@dimen/comm_theme_padding_horizontal"
                android:duplicateParentState="true"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/text_write_area_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_sv"
        android:background="@color/black">
<!--        android:alpha="@string/opacity_value_et">-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_section_sort_indicating_circle"
            android:background="@color/purple_200"
            android:layout_width="@dimen/comment_section_sort_indicating_circle_size"
            android:layout_height="@dimen/comment_section_sort_indicating_circle_size"
            android:layout_marginTop="@dimen/comment_sort_indicating_circle_martintop"
            android:layout_marginStart="@dimen/comment_sort_indicating_circle_marginstart"/>
        <TextView
            android:id="@+id/comment_sort_by_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_sort_btn_marginstart"
            android:text="@string/comment_sort_by_time_btn_text"
            android:textSize="@dimen/comment_sort_btn_text_size"/>
        <TextView
            android:id="@+id/comment_sort_by_popularity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_sort_pop_btn_marginstart"
            android:text="@string/comment_sort_by_popularity_btn_text"
            android:textSize="@dimen/comment_sort_btn_text_size"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/article_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_rv_margintop"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
</RelativeLayout>