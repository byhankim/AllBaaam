                android:text="@string/comm_stocks_overseas" />
            <TextView
                android:textColor="@color/style1_6"
                android:background="@drawable/rounded_corner_study_hard"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="7dp"
                android:drawableRight="@drawable/ic_book2"
                android:drawablePadding="10dp"
                android:text="@string/comm_study_hard" />
            <TextView
                android:textColor="@color/style1_3"
                android:background="@drawable/rounded_corner_sports_overseas"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="7dp"
                android:drawableRight="@drawable/ic_sport2"
                android:drawablePadding="10dp"
                android:text="@string/comm_sports_overseas" />
            <TextView
                android:textColor="@color/style1_1"
                android:background="@drawable/rounded_corner_food"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="7dp"
                android:drawableRight="@drawable/ic_chicken2"
                android:drawablePadding="10dp"
                android:text="@string/comm_food" />
            <TextView
                android:textColor="@color/style1_7"
                android:background="@drawable/rounded_corner_games"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/ic_game2"
                android:drawablePadding="10dp"
                android:text="@string/comm_games" />
