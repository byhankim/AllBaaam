    <com.google.android.gms.maps.MapView
        android:id="@+id/mv_contactUs_gMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/map_serach_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/map_key"
        android:background="@drawable/rounded_corner_gray"
        android:gravity="center_vertical"
        android:hint="올빼미 상수역점"
        android:padding="20dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/gray1"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/map_search_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/map_serach_tv"
        android:layout_alignEnd="@+id/map_serach_tv"
        android:background="@drawable/ic_baseline_search_24" />

    <TextView
        android:id="@+id/map_key"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_light"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        tools:ignore="OnClick" />

    <carbon.widget.HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:scrollbars="none"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:textColor="@color/style1_5"
                android:background="@drawable/rounded_corner_honey_tip"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="20dp"
                android:drawableRight="@drawable/ic_idea2"
                android:drawablePadding="10dp"
                android:text="@string/comm_honey_tip" />
            <TextView
                android:textColor="@color/style2_4"
                android:background="@drawable/rounded_corner_stocks_overseas"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginRight="7dp"
                android:drawableRight="@drawable/ic_graph2"
