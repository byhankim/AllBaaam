<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/article_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/toolbar_elevation_size"
        android:background="@color/black" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/article_toolbar"
        android:layout_above="@id/reply_add_section_rl">
        <RelativeLayout
            android:id="@+id/article_inner_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_toolbar">
            <RelativeLayout
                android:id="@+id/article_section_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/article_padding_lr" >
                <RelativeLayout
                    android:id="@+id/article_body_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/clicked_article_topic_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2px"
                        android:background="@drawable/category_style_in_article"
                        >
                        <TextView
                            android:backgroundTint="@color/ui1"
                            android:id="@+id/tv_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/style1_5"
                            android:textSize="10sp"
                            android:text="#해외 축구"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:padding="3dp"
                            android:gravity="center" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/article_uname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/clicked_article_topic_layout"
                        android:layout_alignStart="@id/clicked_article_topic_layout"
                        android:layout_marginTop="@dimen/article_uname_margintop"
                        android:text="@string/hungry_bingbong"
                        android:textStyle="bold"
                        android:textSize="@dimen/article_uname_textsize"/>

                    <ToggleButton
                        android:id="@+id/article_bookmark_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textOff=""
                        android:textOn=""
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bookmark_selector"
                        />
                    <TextView
                        android:id="@+id/article_timestamp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/article_cate_tv_margintop"
                        android:layout_below="@id/article_bookmark_btn"
                        android:textSize="@dimen/article_timestamp_tv_size"
                        android:text="@string/article_timestamp_tv_dummy"/>

                    <TextView
                        android:id="@+id/article_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/article_uname"
                        android:layout_marginTop="@dimen/article_content_tv_paddingtop"
                        android:layout_marginEnd="@dimen/article_content_body_margin_end"
                        android:paddingEnd="@dimen/article_content_tv_paddingend"
                        android:drawablePadding="@dimen/comm_inline_drawable_padding"
                        android:text="@string/article_content_tv" />

                    <ImageView
                        android:id="@+id/article_glide_image_iv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/article_content_tv"
                        android:layout_marginTop="@dimen/article_glide_image_iv_margintop"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:visibility="invisible"
                        />
                </RelativeLayout>


                <!-- 하수런(menu ㄴㄴ) -->
                <RelativeLayout
                    android:id="@+id/article_section_bottom_buttons_rl"
                    android:layout_below="@id/article_body_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ToggleButton
                        android:id="@+id/article_favorite_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite_selector"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_marginTop="21dp"
                        android:textOff=""
                        android:textOn="" />
                    <TextView
                        android:id="@+id/article_favorite_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/article_favorite_btn"
                        android:layout_alignTop="@id/article_favorite_btn"
                        android:layout_marginTop="@dimen/article_favorite_count_tv_margin_vertical"
                        android:layout_marginStart="@dimen/create_article_count_tv_margin_horizontal"
                        android:text="@string/article_favorite_count_text"/>

                    <TextView
                        android:id="@+id/article_comment_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/article_content_padding_horizontal"
                        android:layout_marginTop="@dimen/article_content_tv_paddingtop"
                        android:layout_toEndOf="@id/article_favorite_btn"
                        android:background="@drawable/outline_chat_bubble_outline_24" />
                    <TextView
                        android:id="@+id/article_comment_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/article_comment_btn"
                        android:layout_alignTop="@id/article_favorite_btn"
                        android:layout_marginTop="@dimen/article_favorite_count_tv_margin_vertical"
                        android:layout_marginStart="@dimen/create_article_count_tv_margin_horizontal"
                        android:text="@string/article_comment_count_text"/>

                    <TextView
                        android:id="@+id/article_share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/article_content_tv_paddingtop"
                        android:background="@drawable/outline_share_24" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/comment_section_hoonsoo_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_section_rl"
                android:gravity="center"
                android:paddingTop="@dimen/hoonsoo_padding_vertical"
                android:paddingBottom="@dimen/hoonsoo_padding_vertical"
                android:text="@string/comment_section_hoonsoo_str"
                android:textSize="@dimen/hoonsoo_text_size"
                android:background="@color/black"/>
            <RelativeLayout
                android:id="@+id/comment_section_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_section_hoonsoo_tv"
                android:paddingTop="@dimen/article_padding_lr"
                android:paddingBottom="@dimen/article_padding_lr"
                android:descendantFocusability="blocksDescendants"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/comment_section_sort_by_time_indicating_circle"
                    android:src="@color/purple_200"
                    android:layout_width="@dimen/comment_section_sort_indicating_circle_size"
                    android:layout_height="@dimen/comment_section_sort_indicating_circle_size"
                    android:layout_marginStart="@dimen/comment_sort_by_time_indicating_circle_margin_start"
                    android:layout_alignBottom="@id/comment_section_sort_by_time_indicating_circle"
                    android:layout_marginTop="@dimen/comment_Section_sort_circle_margintop"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/comment_sort_by_time_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/comment_sort_btn_marginstart"
                    android:text="@string/comment_sort_by_time_btn_text"
                    android:layout_toEndOf="@id/comment_section_sort_by_time_indicating_circle"
                    android:textSize="@dimen/comment_sort_btn_text_size"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/comment_section_sort_by_popular_indicating_circle"
                    android:src="@color/purple_200"
                    android:layout_width="@dimen/comment_section_sort_indicating_circle_size"
                    android:layout_height="@dimen/comment_section_sort_indicating_circle_size"
                    android:layout_marginStart="@dimen/comment_sort_by_pop_indicating_circle_marginstart"
                    android:layout_marginTop="@dimen/comment_Section_sort_circle_margintop"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/comment_sort_by_popularity_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/comment_sort_pop_btn_marginstart"
                    android:layout_toEndOf="@id/comment_section_sort_by_popular_indicating_circle"
                    android:text="@string/comment_sort_by_popularity_btn_text"
                    android:textSize="@dimen/comment_sort_btn_text_size"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comments_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comment_rv_margintop"
                    android:nestedScrollingEnabled="false"/>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/reply_add_section_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reply_add_section_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_rounded_corners"
        android:backgroundTint="@color/gray8"
        android:visibility="visible">
        <EditText
            android:id="@+id/reply_content_et"
            android:layout_width="@dimen/reply_add_section_et_width"
            android:layout_height="@dimen/reply_add_section_et_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/reply_add_section_et_margin_horizontal"
            android:paddingStart="@dimen/reply_content_et_padding_horizontal"
            android:paddingEnd="@dimen/reply_content_et_padding_horizontal"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/gray5"/>
        <TextView
            android:id="@+id/reply_add_btn"
            android:layout_width="@dimen/reply_add_section_btn_width"
            android:layout_height="@dimen/reply_add_section_btn_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/reply_add_section_et_margin_horizontal"
            android:text="@string/reply_add_btn_text"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/purple_200"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

</RelativeLayout>
